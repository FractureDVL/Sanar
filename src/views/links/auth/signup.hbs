<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Registro</h3>
        </div>
        <div class="card-body">
          <form action="/signup" method="post">

            <div class="form-group">
              <input
                type="text"
                name="nombre"
                class="form-control"
                placeholder="name"
              />
            </div>

            <div class="form-group">
              <input
                type="text"
                name="email"
                class="form-control"
                placeholder="username"
              />

              
            <div class="form-group">
              <input
                type="password"
                name="password"
                class="form-control"
                placeholder="password"
              />

              <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Registrado!   
                    </button>
              </div>

            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>